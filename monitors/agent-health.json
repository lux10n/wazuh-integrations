{
   "name": "Agent health",
   "type": "monitor",
   "monitor_type": "query_level_monitor",
   "enabled": true,
   "schedule": {
      "period": {
         "unit": "MINUTES",
         "interval": 10
      }
   },
   "inputs": [
      {
         "search": {
            "indices": [
               "wazuh-monitoring-*"
            ],
            "query": {
               "size": 0,
               "query": {
                  "bool": {
                     "filter": [
                        {
                           "term": {
                              "status": {
                                 "value": "disconnected",
                                 "boost": 1
                              }
                           }
                        },
                        {
                           "range": {
                              "timestamp": {
                                 "from": "now-10m",
                                 "to": null,
                                 "include_lower": true,
                                 "include_upper": true,
                                 "format": "strict_date_optional_time",
                                 "boost": 1
                              }
                           }
                        }
                     ],
                     "must_not": [
                        {
                           "terms": {
                              "group.keyword": [
                                 "test-agents"
                              ],
                              "boost": 1
                           }
                        },
                        {
                           "terms": {
                              "name": [
                                 "bastion-premises-production-sen"
                              ],
                              "boost": 1
                           }
                        }
                     ],
                     "adjust_pure_negative": true,
                     "boost": 1
                  }
               },
               "aggregations": {
                  "agents": {
                     "terms": {
                        "field": "name",
                        "size": 10,
                        "min_doc_count": 1,
                        "shard_min_doc_count": 0,
                        "show_term_doc_count_error": false,
                        "order": [
                           {
                              "_count": "desc"
                           },
                           {
                              "_key": "asc"
                           }
                        ]
                     }
                  }
               }
            }
         }
      }
   ],
   "triggers": [
      {
         "query_level_trigger": {
            "id": "8Ei4KpoBNoFh-r2a804Q",
            "name": "Agent is Down",
            "severity": "1",
            "condition": {
               "script": {
                  "source": "ctx.results[0].hits.total.value > 0",
                  "lang": "painless"
               }
            },
            "actions": [
               {
                  "id": "notification074414",
                  "name": "Notify Security",
                  "destination_id": "wkiTKpoBNoFh-r2aXEoL",
                  "message_template": {
                     "source": "{{ctx.results.0.hits.total.value}} agent(s) disconnected in the last {{ctx.monitor.schedule.period.interval}} {{ctx.monitor.schedule.period.unit}}. Please log in and investigate.\n- Trigger: {{ctx.trigger.name}}\n- Severity: {{ctx.trigger.severity}}\n- Interval: {{ctx.periodStart}} UTC â†’ {{ctx.periodEnd}} UTC\n- Affected agents:\n{{#ctx.results.0.aggregations.agents.buckets}}\n  - {{key}}\n{{/ctx.results.0.aggregations.agents.buckets}}",
                     "lang": "mustache"
                  },
                  "throttle_enabled": false,
                  "subject_template": {
                     "source": "Alerting Notification action",
                     "lang": "mustache"
                  }
               }
            ]
         }
      }
   ],
   "ui_metadata": {
      "schedule": {
         "timezone": null,
         "frequency": "interval",
         "period": {
            "unit": "MINUTES",
            "interval": 10
         },
         "daily": 0,
         "weekly": {
            "tue": false,
            "wed": false,
            "thur": false,
            "sat": false,
            "fri": false,
            "mon": false,
            "sun": false
         },
         "monthly": {
            "type": "day",
            "day": 1
         },
         "cronExpression": "0 */1 * * *"
      },
      "monitor_type": "query_level_monitor",
      "search": {
         "searchType": "query",
         "timeField": "@timestamp",
         "aggregations": [],
         "groupBy": [],
         "bucketValue": 1,
         "bucketUnitOfTime": "h",
         "filters": []
      }
   }
}